<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/index.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
           getChannelOptions();
        });

        function getChannelOptions() {
            $.ajax({
                type: "GET",
                dataType: "json",
                url: "http://localhost:3000/channels",
                timeout: 1000,
                success: function (result) {
                    if (result != undefined) {
                        generateOptions(result);
                    }
                },
                error: function (parsedjson, textStatus, errorThrown) {
                    console.log("getEnergyProd: error");
                }
            });
        }

        function generateOptions(data){
            console.log(data);
            for(var element in data){
                console.log(data[element]);
                addEntry(data[element]);
            }
        }

         function addEntry(optionName) {
            var htmlElement = generateHTML(optionName, optionName);
            var newRow = $(htmlElement);
            $('#balance').prepend(newRow);
            newRow.fadeIn(1000);
        }

        function generateHTML(id, optionName) {
            var newRow = `<div class="[ form-group ]">
                            <input type="checkbox" name="${id}" id="${id}"  />
                            <div class="[ btn-group ]">
                                <label for="${id}" class="[ btn btn-default ]">
                                    <span class="[ glyphicon glyphicon-ok ]"></span>
                                    <span> </span>
                                </label>
                                <label for="${id}" class="[ btn btn-default active ] channel-option">
                                    ${id}
                                </label>
                            </div>
                        </div>
                `;
            return newRow;
        }

       

  
        // -------------------


    </script>
</head>

<body>
    <!--main -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="text-center col-xs-4 col-xs-offset-4">
                    <div class="robot-head">
                        
                        <div class="form-inline">
                            <label for="usrlimit">Limit:</label>
                           <input type="text" class="form-control" id="usrlimit">
                         </div>
                    </div>
                    <div class="robot-body">
                        <span id="balance"></span>
                    </div>
                    <div class="text-center robot-bottom">
                        <button type="button" class="btn btn-primary">Bot starten</button>
                    </div>
                </div>

                
            </div>
        </div>
    </div>
</body>

</html>