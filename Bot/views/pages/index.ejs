<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/index.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
           getChannelOptions();
        });

        function getChannelOptions() {
            $.ajax({
                type: "GET",
                dataType: "json",
                url: "http://localhost:3000/channels",
                timeout: 1000,
                success: function (result) {
                    if (result != undefined) {
                        generateOptions(result);
                    }
                },
                error: function (parsedjson, textStatus, errorThrown) {
                    console.log("getEnergyProd: error");
                }
            });
        }

        function generateOptions(data){
            console.log(data);
            for(var element in data){
                console.log(data[element]);
                addEntry(data[element]);
            }
        }

         function addEntry(optionName) {
            var htmlElement = generateHTML(optionName, optionName);
            var newRow = $(htmlElement);
            $('#balance').prepend(newRow);
            newRow.fadeIn(1000);
        }

        function generateHTML(id, optionName) {
            var newRow = `<div class="[ form-group ]">
                            <input type="checkbox" name="${id}" id="${id}"  />
                            <div class="[ btn-group ]">
                                <label for="${id}" class="[ btn btn-default ]">
                                    <span class="[ glyphicon glyphicon-ok ]"></span>
                                    <span> </span>
                                </label>
                                <label for="${id}" class="[ btn btn-default active ]">
                                    ${id}
                                </label>
                            </div>
                        </div>
                `;
            return newRow;
        }

       

  
        // -------------------


    </script>
</head>

<body>
    <% include ../partials/header %>

    <div class="[ col-xs-12 col-sm-6 ]">
        <h3>Standard Checkboxes</h3><hr />
        <div class="[ form-group ]">
            <input type="checkbox" name="fancy-checkbox-default" id="fancy-checkbox-default" autocomplete="off" />
            <div class="[ btn-group ]">
                <label for="fancy-checkbox-default" class="[ btn btn-default ]">
                    <span class="[ glyphicon glyphicon-ok ]"></span>
                    <span> </span>
                </label>
                <label for="fancy-checkbox-default" class="[ btn btn-default active ]">
                 Default Checkbox
                </label>
            </div>
        </div>
    </div>

    <!--main -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-5">
                <% if (type == 'prosumer' || type == 'consumer') { %>
                <div class="panel panel-danger bs-panel">
                    <div style="padding: 5 10 0 10" class="panel-heading">
                        <h4>Verbrauch</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-5">
                                <span class="pull-left">
                                    <h5>Leistung</h5>
                                </span>
                            </div>
                            <div class="col-xs-5">
                                <span class="pull-right">
                                    <h5>
                                        <span id="consumption"></span>
                                    </h5>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <span class="pull-left">
                                    <h5>Zählerstand</h5>
                                </span>
                            </div>
                            <div class="col-xs-5">
                                <span class="pull-right">
                                    <h5>
                                        <span id="cons_total"></span>
                                    </h5>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <% if (type == 'prosumer' || type == 'producer' ) { %>
                <div class="panel panel-success bs-panel">
                    <div style="padding: 5 10 0 10" class="panel-heading">
                        <h4>Produktion</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-5">
                                <span class="pull-left">
                                    <h5>Leistung</h5>
                                </span>
                            </div>
                            <div class="col-xs-5">
                                <span class="pull-right">
                                    <h5>
                                        <span id="production"></span>
                                    </h5>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <span class="pull-left">
                                    <h5>Zählerstand</h5>
                                </span>
                            </div>
                            <div class="col-xs-5">
                                <span class="pull-right">
                                    <h5>
                                        <span id="prod_total"></span>
                                    </h5>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>

            <div class="col-xs-2">
                <div class="progress-bar-container">
                    <% if (type == 'prosumer' || type == 'consumer' ) { %>
                    <div class="progress progress-bar-vertical">
                        <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" style="height: 100%; background-color:#a74544">
                        </div>
                    </div>
                    <% } %>

                    <% if (type == 'prosumer' || type == 'producer' ) { %>
                    <div class="progress progress-bar-vertical">
                        <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" style="height: 100%; background-color:#3e753f">
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>

            <div class="col-xs-5">
                <div class="text-center">
                    <br />
                    <br />
                    <span>
                        <h3>Guthaben</h3>
                    </span>
                    <span>
                        <h4><span id="balance">0.00 CHF</span></h4>
                    </span>
                </div>
                <br />
                <br />
                <br />
                <% if (type != 'producer') { %>
                <div class="text-center">
                    <button type="button" class="btn btn-primary">Guthaben aufladen...</button>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>